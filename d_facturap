/* To prevent any potential data loss issues, you should review this script in detail before running it outside the context of the database designer.*/
BEGIN TRANSACTION
SET QUOTED_IDENTIFIER ON
SET ARITHABORT ON
SET NUMERIC_ROUNDABORT OFF
SET CONCAT_NULL_YIELDS_NULL ON
SET ANSI_NULLS ON
SET ANSI_PADDING ON
SET ANSI_WARNINGS ON
COMMIT
BEGIN TRANSACTION
GO
CREATE TABLE dbo.Tmp_D_FACTURAP
	(
	EMPRESA nvarchar(3) NULL,
	COREL nvarchar(20) NOT NULL,
	ITEM smallint NOT NULL,
	ANULADO nvarchar(1) NULL,
	CODPAGO int NULL,
	TIPO nvarchar(1) NULL,
	VALOR float(53) NULL,
	DESC1 nvarchar(50) NULL,
	DESC2 nvarchar(50) NULL,
	DESC3 nvarchar(50) NULL,
	DEPOS nvarchar(1) NULL
	)  ON [PRIMARY]
GO
ALTER TABLE dbo.Tmp_D_FACTURAP SET (LOCK_ESCALATION = TABLE)
GO
IF EXISTS(SELECT * FROM dbo.D_FACTURAP)
	 EXEC('INSERT INTO dbo.Tmp_D_FACTURAP (EMPRESA, COREL, ITEM, ANULADO, CODPAGO, TIPO, VALOR, DESC1, DESC2, DESC3, DEPOS)
		SELECT EMPRESA, COREL, ITEM, ANULADO, CONVERT(int, CODPAGO), TIPO, VALOR, DESC1, DESC2, DESC3, DEPOS FROM dbo.D_FACTURAP WITH (HOLDLOCK TABLOCKX)')
GO
DROP TABLE dbo.D_FACTURAP
GO
EXECUTE sp_rename N'dbo.Tmp_D_FACTURAP', N'D_FACTURAP', 'OBJECT' 
GO
ALTER TABLE dbo.D_FACTURAP ADD CONSTRAINT
	PK_D_FACTURAP PRIMARY KEY CLUSTERED 
	(
	COREL,
	ITEM
	) WITH( STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]

GO
COMMIT
select Has_Perms_By_Name(N'dbo.D_FACTURAP', 'Object', 'ALTER') as ALT_Per, Has_Perms_By_Name(N'dbo.D_FACTURAP', 'Object', 'VIEW DEFINITION') as View_def_Per, Has_Perms_By_Name(N'dbo.D_FACTURAP', 'Object', 'CONTROL') as Contr_Per 


