/* To prevent any potential data loss issues, you should review this script in detail before running it outside the context of the database designer.*/
BEGIN TRANSACTION
SET QUOTED_IDENTIFIER ON
SET ARITHABORT ON
SET NUMERIC_ROUNDABORT OFF
SET CONCAT_NULL_YIELDS_NULL ON
SET ANSI_NULLS ON
SET ANSI_PADDING ON
SET ANSI_WARNINGS ON
COMMIT
BEGIN TRANSACTION
GO
ALTER TABLE dbo.D_FACTURAD
	DROP CONSTRAINT FK_D_FACTURAD_D_FACTURA1
GO
ALTER TABLE dbo.D_FACTURA SET (LOCK_ESCALATION = TABLE)
GO
COMMIT
select Has_Perms_By_Name(N'dbo.D_FACTURA', 'Object', 'ALTER') as ALT_Per, Has_Perms_By_Name(N'dbo.D_FACTURA', 'Object', 'VIEW DEFINITION') as View_def_Per, Has_Perms_By_Name(N'dbo.D_FACTURA', 'Object', 'CONTROL') as Contr_Per BEGIN TRANSACTION
GO
CREATE TABLE dbo.Tmp_D_FACTURAD
	(
	EMPRESA int NOT NULL,
	COREL nvarchar(20) NOT NULL,
	PRODUCTO int NOT NULL,
	UMPESO nvarchar(25) NOT NULL,
	ANULADO nvarchar(1) NULL,
	CANT float(53) NULL,
	PRECIO float(53) NULL,
	IMP float(53) NULL,
	DES float(53) NULL,
	DESMON float(53) NULL,
	TOTAL float(53) NULL,
	PRECIODOC float(53) NULL,
	PESO float(53) NULL,
	VAL1 float(53) NULL,
	VAL2 nvarchar(15) NULL,
	UMVENTA nvarchar(25) NULL,
	FACTOR float(53) NULL,
	UMSTOCK nvarchar(25) NULL
	)  ON [PRIMARY]
GO
ALTER TABLE dbo.Tmp_D_FACTURAD SET (LOCK_ESCALATION = TABLE)
GO
IF EXISTS(SELECT * FROM dbo.D_FACTURAD)
	 EXEC('INSERT INTO dbo.Tmp_D_FACTURAD (EMPRESA, COREL, PRODUCTO, UMPESO, ANULADO, CANT, PRECIO, IMP, DES, DESMON, TOTAL, PRECIODOC, PESO, VAL1, VAL2, UMVENTA, FACTOR, UMSTOCK)
		SELECT EMPRESA, COREL, CONVERT(int, PRODUCTO), UMPESO, ANULADO, CANT, PRECIO, IMP, DES, DESMON, TOTAL, PRECIODOC, PESO, VAL1, VAL2, UMVENTA, FACTOR, UMSTOCK FROM dbo.D_FACTURAD WITH (HOLDLOCK TABLOCKX)')
GO
DROP TABLE dbo.D_FACTURAD
GO
EXECUTE sp_rename N'dbo.Tmp_D_FACTURAD', N'D_FACTURAD', 'OBJECT' 
GO
ALTER TABLE dbo.D_FACTURAD ADD CONSTRAINT
	PK_D_FACTURAD PRIMARY KEY CLUSTERED 
	(
	COREL,
	PRODUCTO,
	EMPRESA,
	UMPESO
	) WITH( STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]

GO
ALTER TABLE dbo.D_FACTURAD ADD CONSTRAINT
	FK_D_FACTURAD_D_FACTURA1 FOREIGN KEY
	(
	COREL,
	EMPRESA
	) REFERENCES dbo.D_FACTURA
	(
	COREL,
	EMPRESA
	) ON UPDATE  NO ACTION 
	 ON DELETE  CASCADE 
	
GO
COMMIT
select Has_Perms_By_Name(N'dbo.D_FACTURAD', 'Object', 'ALTER') as ALT_Per, Has_Perms_By_Name(N'dbo.D_FACTURAD', 'Object', 'VIEW DEFINITION') as View_def_Per, Has_Perms_By_Name(N'dbo.D_FACTURAD', 'Object', 'CONTROL') as Contr_Per 
